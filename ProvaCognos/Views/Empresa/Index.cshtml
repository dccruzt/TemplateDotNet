@model IEnumerable<ProvaCognos.Models.Empresa>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Empresas";
}
<div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
@if (Model != null)
{
    <table class="table" id="tableEmpresa">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInclusao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAlteracao)
            </th>
            <th></th>
        </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Site)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInclusao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataAlteracao)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EmpresaID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EmpresaID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmpresaID })
                    </td>
                </tr>
            }
    </table>
}
else
{
    <p>Ainda não existem empresas.</p>
}
</div>

@section Scripts{
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tableEmpresa').DataTable();
            //alert("Hola dani");
        });
    </script>   
}